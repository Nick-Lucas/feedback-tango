{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@/*": ["./*"]
    },
    "exactOptionalPropertyTypes": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
