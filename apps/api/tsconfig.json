{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    // @hono/mcp has a type mismatch on mcpServer.connect(transport)
    "exactOptionalPropertyTypes": false
  },
  "exclude": ["node_modules"]
}
